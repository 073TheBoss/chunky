<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10.0" xmlns="http://javafx.com/javafx/8.0.40" xmlns:fx="http://javafx.com/fxml/1" fx:controller="se.llbit.chunky.ui.render.SettingsExportController">
   <children>
      <Label text="Settings to export:" />
      <CheckBox fx:id="general" mnemonicParsing="false" text="General" />
      <CheckBox fx:id="lighting" mnemonicParsing="false" text="Lighting" />
      <CheckBox fx:id="sky" mnemonicParsing="false" text="Sky" />
      <CheckBox fx:id="fog" mnemonicParsing="false" text="Fog" />
      <CheckBox fx:id="water" mnemonicParsing="false" text="Water" />
      <CheckBox fx:id="camera" mnemonicParsing="false" text="Camera" />
      <CheckBox fx:id="entities" mnemonicParsing="false" text="Entities" />
      <CheckBox fx:id="postprocessing" mnemonicParsing="false" text="Postprocessing" />
      <CheckBox fx:id="chunks" mnemonicParsing="false" text="Chunks" />
      <HBox alignment="BASELINE_LEFT" spacing="10.0">
         <children>
            <Label text="Settings JSON:" />
            <TextField fx:id="json" />
         </children>
      </HBox>
      <HBox alignment="TOP_RIGHT">
         <children>
            <Button mnemonicParsing="false" text="Done" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
